<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/xsrt_margin_left"
    android:layout_marginTop="@dimen/xsrt_margin_top"
    android:layout_marginRight="@dimen/xsrt_margin_right"
    android:background="@drawable/xsrt_item_subject_bg"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <LinearLayout
        android:id="@+id/questionTitleLL"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <CheckBox
            android:id="@+id/isAdded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/xsrt_selector_raddio_btn"
            android:button="@null"
            android:visibility="gone" />

        <TextView
            android:id="@+id/subjectNumTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="编号:"
            android:textColor="@color/xsrt_title1_txt_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/isCollocted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/xsrt_ic_collection_no"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/dellImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/xsrt_ic_del"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xsrt_divider" />

    <WebView
        android:id="@+id/showContentWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:scrollbars="none" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="2dp"
        android:background="@color/xsrt_divider" />

    <FrameLayout
        android:id="@+id/fl_subject_item"
        android:layout_width="match_parent"
        android:layout_height="37dp">

        <TextView
            android:id="@+id/showDetailTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:drawableRight="@drawable/xsrt_ic_right_arrow"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="查看详情"
            android:textColor="@color/xsrt_title1_txt_color"
            android:textSize="14sp" />
    </FrameLayout>


</LinearLayout>