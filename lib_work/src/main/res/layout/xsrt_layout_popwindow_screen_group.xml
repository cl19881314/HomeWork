<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/screen_root_pop_group"
    android:layout_height="match_parent"
    android:background="#4D000000"
    android:paddingLeft="100dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/xsrt_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="筛选"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/xsrt_divider_height"
            android:background="@color/xsrt_divider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="题库" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="120dp"
                android:layout_height="44dp"
                android:button="@null"
                android:gravity="center"
                android:text="基础题库" />

            <RadioButton
                android:layout_width="120dp"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:button="@null"
                android:gravity="center"
                android:text="我的收藏" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="难易程度" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcy_screen_popwindow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/clear_screen_popwindow"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="清除选项" />

            <TextView
                android:id="@+id/sure_screen_popwindow"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@color/xsrt_popwindow_font"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/xsrt_white" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
